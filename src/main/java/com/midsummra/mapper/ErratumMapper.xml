<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midsummra.mapper.ErratumMapper">
    <insert id="addErratum" parameterType="com.midsummra.pojo.Erratum">
        insert into project_test.erratum ( word, translation, date, reason) VALUES (#{word},#{translation},#{date},#{reason})
    </insert>

    <delete id="deleteErratum" parameterType="int">
        delete from project_test.erratum where id = #{id}
    </delete>
</mapper>